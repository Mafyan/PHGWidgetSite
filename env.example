# Обязательно: секреты НЕ кладем в код, только через env (или файл .env локально)
ONEC_BASE_URL=https://cloud.1c.fitness/app03/2914/hs/api/v3
ONEC_BASIC_USER=YOUR_BASIC_LOGIN
ONEC_BASIC_PASS=YOUR_BASIC_PASSWORD
ONEC_API_KEY=YOUR_API_KEY

# Безопасность
# Разрешенные домены для виджета (через запятую). Пример: https://example.com,https://www.example.com
CORS_ALLOW_ORIGINS=

# Простой rate limit (на IP): запросов за окно
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# Кэш расписания (сек)
CACHE_TTL_SECONDS=30

# Таймауты запросов к 1C (сек)
HTTP_TIMEOUT_SECONDS=15

# Логи
LOG_LEVEL=INFO

